<h1>Listing admin_users</h1>
 <% if !flash[:notice].blank? %>
    <%= flash[:notice] %>
 <% end %>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Position</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admin_users.each do |admin_user| %>
  <tr>
    <td><%= admin_user.first_name %></td>
    <td><%= admin_user.last_name %></td>
    <td><%= admin_user.position %></td>
    <td><%= admin_user.email %></td>
    <td><%= admin_user.phone %></td>
    <td><%= admin_user.image %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(admin_user) %></td>
    <td><%= link_to 'Destroy', admin_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Admin user', new_admin_user_path %>
