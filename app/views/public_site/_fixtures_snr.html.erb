<% @fixtures_snr.last(1).each do |fixture| %>
    <div class="next_fixture table-condensed">
      <table class="fixtures table table-striped table-bordered">
        <thead>
        <tr>
          <th colspan="4">
            <h5>Next Fixture:
              <%= fixture.location %>
            </h5>
          </th>
        </tr>
        <tr>
          <td colspan="4"><%= fixture.date.strftime("%a %d %B, %I:%M %p") %></td>
        </tr>
        <tr>
          <td>Home Team</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>Away Team</td>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td><%= fixture.home_team %></td>
          <td></td>
          <td></td>
          <td><%= fixture.away_team %></td>
        </tr>
      </table>
    </div>
<% end %>
