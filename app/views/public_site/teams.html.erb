<div class="page-header">
</div>
<div class="container-fluid">
  <div class="row-fluid">
    <%= render(partial: "team_name") %>
    <div class="span9 well well-large pull-right">
      <div class="row-fluid">
        <div id="played" class="span2 well">
          <h5>Played</h5>
          <% @games_played.each do |games| %>
              <%= games.played %>
          <% end %>
        </div>
        <div class="span4 well">
          <h5>Top Scorers</h5>
          <ul class="unstyled">
            <% @top_scorers.each do |t| %>
                <li><%= truncate(t.first_name, length: 2, omission: ".") %> <%= t.last_name %> - <%= t.goals %></li>
            <% end %>
          </ul>
        </div>
        <div class="span3 well">
          <h5>Honours</h5>
          <ul class="unstyled">
            <% @achievements.each do |a| %>
                <li><%= a.achievements %></li>
            <% end %>
          </ul>
        </div>
        <div class="span3 well">
          <ul class="unstyled">
            <h5>Player of the Year</h5>
            <% @player_award.each do |award| %>
                <% if award.team_id == params[:team_id].to_i %>
                    <li><%= truncate(award.first_name, length: 2, omission: ".") %> <%= award.last_name %></li>
                    <li>Played: <%= award.played %></li>
                    <li>Goals: <%= award.goals %></li>
                <% end %>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12 well">History</div>
      </div>
    </div>
    <ul class="thumbnails">
      <% @managers.each do |manager| %>
          <li class="span3">
            <div class="thumbnail">
              <%= image_tag(manager.image_url) %>
              <h5>Manager</h5>
              <hr/>
              <div class="accordion" id="accordion2">
                <div class="accordion-group">
                  <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                      Click Profile:
                    </a>
                  </div>
                  <div id="collapseOne" class="accordion-body collapse out">
                    <div class="accordion-inner">
                      <dl>
                        <dt>Name:</dt>
                        <dd><%= manager.managers_name %></dd>
                        <dt>Details</dt>
                        <dd>dob: <%= manager.achievements %></dd>
                        <dd><%= manager.description %></dd>
                      </dl>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
      <% end %>
    </ul>
  </div>
  <ul class="thumbnails">
    <% @players.each do |player| %>
        <li class="span2">
          <div class="thumbnail">
            <%= image_tag(player.image_url) %>
            <h5><%= player.players_name %></h5>
            <hr/>
            <dl>
              <dt>Position:</dt>
              <dd><%= player.position %></dd>
              <dt>Details</dt>
              <dd>dob: <%= player.dob %></dd>
              <dd><%= player.description %></dd>
            </dl>
          </div>
        </li>
    <% end %>
  </ul>
</div>


