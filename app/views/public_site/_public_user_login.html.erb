<% if !flash[:notice].blank? %>
    <div class="alert alert-info" >
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <%= flash[:notice] %>
    </div>
<% end %>
<%= form_tag controller: :access, action: :check_user_login_details do %>
    <ul class="unstyled pub_login">
      <li><%= label_tag :username %></li>
      <li><%= text_field_tag :username %></li>
      <li><%= label_tag :user_password, 'Password' %></li>
      <li><%= password_field_tag :user_password %></li>
    </ul>
    <%= submit_tag 'Login', :class => 'btn btn-primary' %>
    <a class="btn pull-right" href="public_users/new">Register</a>
<% end %>
