<!-- Modal -->
<% @contacts ||= [] %>
<div id="contacts" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel" class="text-success">Contact us</h3>
  </div>
  <div class="modal-body">
    <table class="table table-striped table-bordered">
      <thead class="fixtures text-success">
      <tr>
        <th>Name</th>
        <th>Position</th>
        <th>E-mail</th>
        <th>Phone</th>
      </tr>
      </thead>
      <% @contacts.each do |contact| %>
      <tbody>
      <tr>
        <td><%= contact.first_name %> <%= contact.last_name %></td>
        <td><%= contact.position %></td>
        <td><%= mail_to(contact.email) %></td>
        <td>0<%= contact.phone %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>