<h1>Listing clubs</h1>
<%=  %>
<table>
  <tr>
    <th>League</th>
    <th>Name</th>
    <th>Played</th>
    <th>Won</th>
    <th>Lost</th>
    <th>Drawn</th>
    <th>Goals for</th>
    <th>Goals against</th>
    <th>Achievements</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clubs.each do |club| %>
  <tr>
    <td><%= club.league_id %></td>
    <td><%= club.name %></td>
    <td><%= club.played %></td>
    <td><%= club.won %></td>
    <td><%= club.lost %></td>
    <td><%= club.drawn %></td>
    <td><%= club.goals_for %></td>
    <td><%= club.goals_against %></td>
    <td><%= club.achievements %></td>
    <td><%= link_to 'Show', club %></td>
    <td><%= link_to 'Edit', edit_club_path(club) %></td>
    <td><%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Club', new_club_path %>
