<% @admin_expenses ||= [] %>
<div class="span4 well pull-right table-condensed">
  <h4>Notices</h4>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Expense</th>
      <th>Purchase Date</th>
      <th>Total Cost</th>
    </tr>
    <% @admin_expenses.each do |expense| %>
        <tr>
          <td><%= truncate(expense.description, length: 15) %></td>
          <td><%= expense.purchase_date.strftime("%a %d %B") %></td>
          <td><%= number_to_currency(expense.amount, :unit => '&euro;') %></td>
          <td><a class="btn btn-small btn-info"<%= link_to "View", controller: :expenses,
                          action: :show, :id => expense.id %></td>
        </tr>
    <% end %>
    </table>
</div>
