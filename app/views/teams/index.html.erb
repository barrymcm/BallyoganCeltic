<h1>Listing teams</h1>

<table>
  <tr>
    <th>League</th>
    <th>Name</th>
    <th>Played</th>
    <th>Won</th>
    <th>Lost</th>
    <th>Drawn</th>
    <th>Goals for</th>
    <th>Goals against</th>
    <th>Achievements</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.league_id %></td>
    <td><%= team.name %></td>
    <td><%= team.played %></td>
    <td><%= team.won %></td>
    <td><%= team.lost %></td>
    <td><%= team.drawn %></td>
    <td><%= team.goals_for %></td>
    <td><%= team.goals_against %></td>
    <td><%= team.achievements %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team', new_team_path %>
